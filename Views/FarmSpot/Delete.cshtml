@using OSRSHelper.Models
@model OSRSHelper.Models.FarmSpot

<h1>Delete Farm Spot</h1>

<form method="post">

    <input type="hidden" asp-for="FarmSpotId" /> <!-- Without this delete wont work -->

    <div class="delete">
        <div class="form-group">
            <label class="form-label">Name</label>
            <input disabled class="form-control" type="text" asp-for="SpotName" />
        </div>
        <div class="form-group">
            <label class="form-label">Time</label>
            <input disabled class="form-control" type="number" asp-for="Time" />
        </div>
        <div class="form-group">
            <label class="form-label">Farm Type</label>
            <select asp-for="FarmTypeId" disabled class="form-control" asp-items="ViewBag.FarmTypeId">
                <option value="">Select</option> <!-- To be nullable value="" -->
            </select>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
</form>