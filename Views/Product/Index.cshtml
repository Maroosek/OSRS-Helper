@model IEnumerable<OSRSHelper.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Products</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ProductName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductValue)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ProductExperience)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FarmType.FarmName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Material.MaterialName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MaterialSecond.MaterialName)
			</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<a class="nav-link text-dark" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.ProductName)</a>
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductValue)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ProductExperience)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FarmType.FarmName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Material.MaterialName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MaterialSecond.MaterialName)
				</td>

			</tr>
		}
	</tbody>
</table>